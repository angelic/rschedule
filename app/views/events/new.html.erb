<%= close_link "sf-add-event"%>
<%= flash_div 'new-error' %>
<% remote_form_for(:calendar_event, :url => events_url) do |f| %>
  <%= f.hidden_field :calendar_id, :value => @calendar.id %>
  <table>
    <tr>
      <td>
        Event:
      </td>
      <td>
        <%= f.text_field :desc, :size => 50 %>
      </td>
    </tr>
    <tr>
      <td>
        From date:
      </td>
      <td>
        <%= f.calendar_date_select :start_date %>
      </td>
    </tr>
    <tr>
      <td>
        From time:
      </td>
      <td>
        <%= f.text_field :start_time %>
      </td>
    </tr>
    <tr>
      <td>
        To time:
      </td>
      <td>
        <%= f.text_field :end_time %>
      </td>
    </tr>
    <tr>
      <td>
        To date:
      </td>
      <td>
        <%= f.calendar_date_select :end_date %>
      </td>
    </tr>
    <tr>
      <td>
        Repeats:
      </td>
      <td>
        <%= render :partial => 'repeats', :locals => {:f => f} %>
      </td>
    <tr>
      <td>
        Description:
      </td>
      <td>
        <%= f.text_area :long_desc, :cols => 50, :rows => 15 %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= submit_tag %>
      </td>
    </tr>
  </table>
<% end %>